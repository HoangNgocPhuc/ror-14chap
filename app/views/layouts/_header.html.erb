<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".sample_app"), root_path, class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".help"), "/static_pages/help" %></li>
        <% if logged_in? %>
          <li><%= link_to t(".users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <% t ".account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), user_path(current_user) %></li>
              <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".log_in"), login_path %></li>
        <% end %>
        <li>
          <% if I18n.locale == :en %>
            <%= image_tag("en.png", class: "set-image-locale") %>
          <% else %>
            <%= image_tag("vn.jpg", class: "set-image-locale") %>
          <% end %>
        </li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to image_tag("en.png"), en_set_languages_path,
                  class: "set-image" %>
              </li>
              <li>
                <%= link_to image_tag("vn.jpg"), vn_set_languages_path,
                  class: "set-image"%>
              </li>
            </ul>
          </li>
      </ul>
    </nav>
  </div>
</header>
