<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.gravatar.size1),
    micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <% if logged_in? && (current_user.current_user? micropost.user) %>
    <%= link_to t("microposts.destroy.title"), micropost, method: :delete,
      data: {confirm: t("microposts.destroy.confirm_delete")},
      class: "btn btn-danger" %>
  <% end %>
  <div class="title">
    <%= micropost.title %>
  </div>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "times_ago.posted" %> <%= time_ago_in_words micropost.created_at %>
      <%= t "times_ago.ago" %>
  </span>
  <div class="list-comments-<%= micropost.id %>">
    <%= render micropost.comments %>
  </div>

  <% if logged_in? %>
    <%= render "comments/form", user: current_user, micropost: micropost %>
  <% end %>
</li>
