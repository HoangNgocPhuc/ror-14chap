<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.gravatar.size1),
    micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "times_ago.posted" %> <%= time_ago_in_words micropost.created_at %>
      <%= t "times_ago.ago" %>
    <% if current_user.current_user? micropost.user %>
      <%= link_to t("microposts.destroy.title"), micropost, method: :delete,
        data: {confirm: t("microposts.destroy.confirm_delete")} %>
    <% end %>
  </span>
</li>
